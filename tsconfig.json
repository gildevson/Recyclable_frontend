{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "Node16",
    "moduleResolution": "node16",

    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "services/*": ["services/*"],
      "pages/*": ["components/pages/*"]
    }
  },
  "include": ["src"]
}
